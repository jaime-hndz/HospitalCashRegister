@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div>
        <h1>@ViewBag.Username</h1>
        <h2>@ViewBag.FullName</h2>
        <h3>@ViewBag.BranchName</h3>
        <h3></h3>

    </div>
    <div>
        @if (@ViewBag.CashRegisterId == null)
        {
            <div>
                <a class="nav-link text-dark" asp-area="" asp-controller="CashRegisters" asp-action="Start">Iniciar día</a>
            </div>
            <div disabled>
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Create">Nueva transacción</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="CashRegisters" asp-action="End">Terminar día</a>
            </div>
        }
        else
        {
            <div disabled>
                <a class="nav-link text-dark" asp-area="" asp-controller="CashRegisters" asp-action="Start">Iniciar día</a>
            </div>
            <div>
                <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Create">Nueva transacción</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="CashRegisters" asp-action="End">Terminar día</a>
            </div>
            
        }

    </div>
</div>
<style>
    div[disabled] {
        pointer-events: none;
        opacity: 0.5;
        background: #CCC;
        width: fit-content;
    }
</style>
