@model Cashier

@{
    ViewData["Title"] = "Detalles Cajero";
}

<h2>Detalles Cajero</h2>

<div>
    <h4>Cajero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Nombre completo</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Administrador</dt>
        <dd>
            @Html.CheckBoxFor(modelItem => Model.Admin, new { @class = "form-check-input", @onclick = "return false;" })
        </dd>
        <dt class="col-sm-2">Sucursal</dt>
        <dd class="col-sm-10">@Model.Branch?.Name</dd>
    </dl>
</div>
<p>
    <partial name="EditButton" model=Model />
    <partial name="GoToIndex" />
</p>
