@model Branch

@{
    ViewData["Title"] = "Eliminar Sucursal";
}

<h2>Eliminar Sucursal</h2>

<h3>¿Estás seguro que quieres eliminiar esta?</h3>
<div>
    <h4>Sucursal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="my-2.5">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn">Cancelar</a>
        </div>
    </form>
</div>