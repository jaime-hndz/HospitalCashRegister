@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Transacciones";
}

@if (@ViewBag.CashRegisterId != null || User.IsInRole("Admin"))
{
    <h2>Transacciones</h2>
    <p>
            @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create">Nueva transacción</a>
            <a asp-action="CreatePayment">Nuevo Pago</a>
        }

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Cajero</th>
                <th>Monto</th>
                <th>Tipo</th>
                <th>Estatus</th>
                <th>Fecha</th>
                <th>Comentario</th>



                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cashier?.Username</td>
                    <td>@item.Amount</td>
                    <td>@item.TransactionTypeId</td>
                    <td>@item.TransactionStatusId</td>
                    <td>@item.Date</td>
                    <td>@item.Comment</td>
                    <td>
                        @if(item.TransactionTypeId == TransactionType.ServicePayment)
                        {
                            <a asp-action="PrintInvoice" asp-route-id="@item.Id">Imprimir</a> 
                            <span>|</span>
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>

                        }
                        else
                        {
                            <a asp-action="PrintTransaction" asp-route-id="@item.Id">Imprimir</a>
                            <span>|</span>
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
 


                    }
                        |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


