@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Transacciones";
}

@if (@ViewBag.CashRegisterId != null || User.IsInRole("Admin"))
{
    <h2>Transacciones</h2>
    <p>
        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-outline-primary">Nueva transacción</a>
            <a asp-action="CreatePayment" class="btn btn-outline-primary">Nuevo Pago</a>
        }

    </p>
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>Cajero</th>
                <th>Monto</th>
                <th>Tipo</th>
                <th>Estatus</th>
                <th>Fecha</th>
                <th>Comentario</th>



                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cashier?.Username</td>
                    <td>@item.Amount</td>
                    <td>
                        @if (@item.TransactionTypeId == TransactionType.CashInflow)
                        {
                            <span class="badge bg-success">Ingreso de efectivo</span>
                        }
                        else if (@item.TransactionTypeId == TransactionType.CashOutflow)
                        {
                            <span class="badge bg-danger">Egreso de efectivo</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Pago de servicio</span>

                        }
                        
                    </td>
                    <td>
                        @if (@item.TransactionStatusId == TransctionStatus.applied)
                        {
                            <span class="badge bg-success">Aplicada</span>
                        }
                        else if (@item.TransactionStatusId == TransctionStatus.pending)
                        {
                            <span class="badge bg-warning">Pendiente</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Cancelada</span>

                        }
                        
                    
                    </td>
                    <td>@item.Date</td>
                    <td>@item.Comment</td>
                    <td>
                        @if(item.TransactionTypeId == TransactionType.ServicePayment)
                        {
                            <a asp-action="PrintInvoice" asp-route-id="@item.Id" class="btn btn-info">Imprimir</a> 
                            <partial name="DetailsButton" model=item />

                        }
                        else
                        {
                            <a asp-action="PrintTransaction" asp-route-id="@item.Id" class="btn btn-info">Imprimir</a>
                            <partial name="DetailsButton" model=item />

                        }
                        <partial name="DeleteButton" model=item />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="card text-center shadow-lg" style="width: 20rem; border-radius: 10px;">
            <div class="card-body">
                <div class="my-3">
                    <!-- Icono de éxito -->
                    <div class="bg-warning rounded-circle d-flex justify-content-center align-items-center"
                         style="width: 70px; height: 70px; margin: 0 auto;">
                        <i class="bi bi bi-x-circle text-white" style="font-size: 36px;"></i>
                    </div>
                </div>
                <h3 class="card-title mt-3">Debes iniciar un día para hacer transacciones</h3>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}


