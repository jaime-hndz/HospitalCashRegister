@model Cashier

@{
    ViewData["Title"] = "Detalles Cajero";
}

<h2>Detalles Cajero</h2>

<div>
    <h4>Cajero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Nombre completo</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Administrador</dt>
        <dd class="col-sm-10">@Model.Admin</dd>

        <dt class="col-sm-2">Sucursal</dt>
        <dd class="col-sm-10">@Model.Branch?.Name</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</p>
