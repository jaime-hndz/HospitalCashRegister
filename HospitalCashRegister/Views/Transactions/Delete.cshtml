@model Cashier

@{
    ViewData["Title"] = "Eliminar Cajero";
}

<h2>Eliminar Cajero</h2>

<h3>¿Estás seguro que quieres eliminiar este?</h3>
<div>
    <h4>Cajero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Nombre completo</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Administrador</dt>
        <dd class="col-sm-10">@Model.Admin</dd>

        <dt class="col-sm-2">Sucursal</dt>
        <dd class="col-sm-10">@Model.Branch?.Name</dd>
    </dl>
    <form asp-action="Delete">
        <div class="my-2.5">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn">Cancelar</a>
        </div>>
    </form>
</div>