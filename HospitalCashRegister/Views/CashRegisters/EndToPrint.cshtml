@{
    ViewData["Title"] = "Día cerrado";
}
<div class="d-flex justify-content-center align-items-center">
    <div class="card text-center shadow-lg" style="width: 20rem; border-radius: 10px;">
        <div class="card-body">
            <div class="my-3">
                <!-- Icono de éxito -->
                <div class="bg-success rounded-circle d-flex justify-content-center align-items-center"
                     style="width: 70px; height: 70px; margin: 0 auto;">
                    <i class="bi bi-check-lg text-white" style="font-size: 36px;"></i>
                </div>
            </div>
            <h3 class="card-title mt-3">¡Día cerrado correctamente!</h3>
            <a asp-action="PrintCashRegister" asp-route-id="@ViewBag.Id" class="btn btn-info btn-lg w-100">Imprimir</a>
            <partial name="GoToIndex" />
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">