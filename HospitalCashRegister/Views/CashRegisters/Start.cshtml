@model CashRegister

@{
    ViewData["Title"] = "Crear Cajero";
}

<h2>Iniciar Día</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Start">
            <div class="form-group">
                <label asp-for="InitialAmount" class="control-label">Monto inicial</label>
                <input asp-for="InitialAmount" class="form-control" type="number" />
                <span asp-validation-for="InitialAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <partial name="GoToIndex" />
</p>

